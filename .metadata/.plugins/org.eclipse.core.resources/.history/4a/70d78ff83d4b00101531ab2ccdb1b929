							for (String escolha : escolhas) {
								try {
									int indice = Integer.parseInt(escolha.trim()) - 1;
									if (indice >= 0 && indice < todasEspecialidades.size()) {
										especialidadesSelecionadas.add(todasEspecialidades.get(indice));
